.row
  .col-md-8
    %h1 Flow steps
  .col-md-4
    = link_to "Create new", new_development_plan_flow_step_path, class: "btn btn-success"
    = link_to 'Show' , development_plan_tasks_path(@development_plan), class: "btn btn-outline-info"
- if @flow_steps.present?
  %table.table
    %tr
      %th ID
      %th Title
      %th Task count
      %th Development plan
      %th Buttons
    - @flow_steps.each do |f|
      %tr
        %td= f.id
        %td= f.title.capitalize
        %td= f.tasks.count
        %td= f.development_plan.title
        %td
          .btn-group
            = link_to "Edit", edit_development_plan_flow_step_path(f.development_plan,f),
              class: "btn btn-warning"
          .btn-group
            = button_to "Delete", development_plan_flow_step_path(f.development_plan,f),
             method: :delete,
             data: {confirm: "Are you sure?"},
             class: "btn btn-outline-danger"
- else
  %p Don`t have a flow step
