.index
  .row
    .col-md-8
      %h1 Users
    .col-md-4
      = link_to "Invite user", new_user_invitation_path, class: "btn btn-success"

  %table.table
    %tr
      %th ID
      %th First name
      %th Last name
      %th Email
      %th Departments
    - @users.each do |f|
      %tr
        %td= f.id
        %td= f.first_name
        %td= f.last_name
        %td= link_to f.email, user_path(f)
        - if f.department.present?
          %td= f.department.title
        - else
          %td nil
