<div class="index">
  <h1>All users </h1>
  <table>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Department</th>
    </tr>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.first_name %></td>
        <td><%= u.last_name %></td>
        <td><%= u.email %></td>
        <% if u.department.present? %>
          <td><%= u.department.title %></td>
        <% else %>
          <td>nil</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
