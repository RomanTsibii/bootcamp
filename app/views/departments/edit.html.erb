<h1>Edit department</h1>
<%= form_with model: @department do |f| %>

  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <%= form_with model: @department, action: :update, method: :post do |file| %>
    <div>
      Upload image<br/>
      <%= file.file_field :image %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>

<% end %>