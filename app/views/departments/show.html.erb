<p>
  <%= @department.id %>
  <%= @department.title %>
</p>
<div>
  <%= link_to "Edit", edit_department_path(@department),
                class: "btn btn-warning" %>
  <%= button_to "Delete", department_path(@department),
                method: :delete,
                data: {confirm: "Are you sure?"},
                class: "btn btn-danger" %>
</div>